{
  "name": "amirmasoud/pepper",
  "description": "Pepper is a auto-generate GraphQL API for Laravel",
  "keywords": [
    "graphql",
    "laravel",
    "auto-generate"
  ],
  "homepage": "https://github.com/amirmasoud/pepper",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Amirmasoud Sheydaei",
      "email": "amirmasoud.sheydaei@gmail.com",
      "homepage": "https://amirmasoud.me",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">= 7.2",
    "illuminate/support": "^6.0|^7.0",
    "doctrine/dbal": "^2.10",
    "haydenpierce/class-finder": "^0.4.2",
    "rebing/graphql-laravel": "^5.1",
    "ext-json": "*"
  },
  "require-dev": {
    "orchestra/testbench": "^5.3",
    "phpunit/phpunit": "~7.0|~8.0",
    "nunomaduro/larastan": "0.6.1",
    "mockery/mockery": "^1.2",
    "friendsofphp/php-cs-fixer": "^2.15",
    "matt-allan/laravel-code-style": "0.5.1",
    "ext-pdo_sqlite": "*"
  },
  "autoload": {
    "psr-4": {
      "Pepper\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Pepper\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "phpstan": "phpstan analyse --memory-limit=512M",
    "phpstan-baseline": "phpstan analyse --memory-limit=512M --generate-baseline",
    "lint": "php-cs-fixer fix --diff --diff-format=udiff --dry-run",
    "fix-style": "php-cs-fixer fix",
    "tests": "phpunit --colors=always --verbose",
    "tests-all": [
      "TESTS_ENABLE_LAZYLOAD_TYPES=0 phpunit --colors=always --verbose",
      "TESTS_ENABLE_LAZYLOAD_TYPES=1 phpunit --colors=always --verbose"
    ]
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "laravel": {
      "providers": [
        "Pepper\\PepperServiceProvider"
      ]
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
